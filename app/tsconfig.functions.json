{
  "compilerOptions": {
    "target": "es2019",
    "jsx": "preserve",

    "module": "commonjs",
    "esModuleInterop": true,

    "sourceMap": true,
    "outDir": "../dist/functions/src",

    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules", ".next", "components", "**/*.tsx", "**/*.d.ts"]
}
