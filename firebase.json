{
  "firestore": {
    "rules": "firebase/firestore.rules",
    "indexes": "firebase/firestore.indexes.json"
  },
  "functions": {
    "source": "dist/functions",
    "predeploy": []
  },
  "hosting": {
    //    "public": "dist/public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**/**",
        "function": "nextApp"
      }
    ]
  },
  "storage": {
    "rules": "firebase/storage.rules"
  }
}
