{
  "name": "omake.page",
  "version": "1.0.0",
  "engines": {
    "node": "8"
  },
  "main": "index.js",
  "author": "TatsuyaYamamoto <yamamoto.tatsuya@fujixerox.co.jp>",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --config webpack.config.client.js",
    "build": "yarn build:client & yarn build:functions",
    "build:client": "   webpack --progress --color --config webpack.config.client.js",
    "build:functions": "webpack --progress --color --config webpack.config.functions.js && cp {package.json,yarn.lock} functions && yarn --cwd functions",
    "lint": "tslint --format stylish --project tsconfig.json --fix 'src/**/*.ts{,x}'",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.ts": [
      "tslint --format stylish --project tsconfig.json --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@loadable/component": "^5.7.0",
    "@material-ui/core": "^3.9.2",
    "@material-ui/icons": "^3.0.2",
    "express": "^4.16.4",
    "firebase": "^5.9.0",
    "firebase-admin": "^7.1.0",
    "firebase-functions": "^2.2.0",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-router-dom": "^4.3.1",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/loadable__component": "^5.6.0",
    "@types/react": "^16.8.8",
    "@types/react-dom": "^16.8.2",
    "@types/react-router-config": "^1.1.2",
    "@types/react-router-dom": "^4.3.1",
    "@types/styled-components": "^4.1.12",
    "commitizen": "^3.0.7",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "ts-loader": "^5.3.3",
    "tslint": "^5.14.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3333",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.1",
    "webpack-node-externals": "^1.7.2"
  }
}
