{
  "name": "dl-code",
  "version": "1.6.2",
  "description": "web app for product hositng and download code generating",
  "main": "index.functions.js",
  "repository": "https://github.com/TatsuyaYamamoto/dl-code.git",
  "author": "TatsuyaYamamoto <yamamoto.tatsuya@fujixerox.co.jp>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "10"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "next dev app",
    "start": "firebase emulators:start",
    "build:client": "run-s build:client:*",
    "build:client:clean": "rm -rf public/*.html public/{_next,download,publish}",
    "build:client:build": "next build app",
    "build:client:static-export": "next export app -o public/next && mv public/next/* public && rm -r public/next",
    "build:functions": "run-s build:functions:*",
    "build:functions:clean": "rm -rf dist/functions/{node_modules,domain,utils,*.js*,yarn.lock}",
    "build:functions:build": "tsc --project app/tsconfig.functions.json",
    "build:functions:copy-deps": "run-s build:functions:copy-deps:*",
    "build:functions:copy-deps:cpx": "cpx '*{package.json,yarn.lock}' 'dist/functions'",
    "build:functions:copy-deps:yarn": "yarn install --production --cwd dist/functions",
    "build-dev": "cross-env NODE_ENV=development npm-run-all --print-label --parallel build:*",
    "build-pro": "cross-env NODE_ENV=production  npm-run-all --print-label --parallel build:*",
    "format": "prettier --write app/**/*.{ts,tsx,js,jsx,json,css}",
    "lint": "tslint --format stylish --project app/tsconfig.json --fix 'app/**/*.ts{,x}'",
    "deploy-dev": "firebase deploy --project dl-code-dev",
    "deploy-dev:hosting": "firebase deploy --project dl-code-dev --only hosting",
    "deploy-pro": "firebase deploy --project dl-code",
    "storybook": "start-storybook"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --format stylish --project app/tsconfig.json --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@auth0/auth0-spa-js": "^1.6.4",
    "@date-io/date-fns": "^1.3.6",
    "@google-cloud/firestore": "^4.1.1",
    "@material-ui/core": "^4.9.4",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/pickers": "^3.2.10",
    "@slack/client": "^5.0.2",
    "dexie": "^2.0.4",
    "firebase": "^7.16.0",
    "firebase-admin": "^8.13.0",
    "firebase-functions": "^3.7.0",
    "hi-base32": "^0.5.0",
    "jsqr": "^1.2.0",
    "material-table": "^1.36.6",
    "moment-timezone": "^0.5.31",
    "next": "^9.3.6",
    "notistack": "^0.8.6",
    "nprogress": "^0.2.0",
    "rc-slider": "^8.6.13",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-dropzone": "^10.1.5",
    "react-ga": "^2.7.0",
    "react-sortable-hoc": "^1.9.1",
    "react-string-replace": "^0.4.4",
    "styled-components": "^4.4.1",
    "uuid": "^3.4.0",
    "victory": "^35.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@storybook/addon-actions": "^5.2.5",
    "@storybook/addon-links": "^5.2.5",
    "@storybook/addons": "^5.2.5",
    "@storybook/react": "^5.2.5",
    "@types/nprogress": "^0.2.0",
    "@types/rc-slider": "^8.6.4",
    "@types/react": "^16.8.18",
    "@types/react-dom": "^16.8.4",
    "@types/styled-components": "^4.4.3",
    "@types/uuid": "^3.4.6",
    "@types/victory": "^33.1.4",
    "babel-loader": "^8.0.6",
    "cpx": "^1.5.0",
    "cross-env": "^5.2.0",
    "css-loader": "^3.0.0",
    "firebase-functions-test": "^0.2.1",
    "firebase-tools": "^8.5.0",
    "husky": "^2.4.1",
    "lint-staged": "^8.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.1",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.0.1",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.5"
  }
}
