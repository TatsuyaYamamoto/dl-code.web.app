{
  "name": "dl-code",
  "version": "0.0.1",
  "description": "web app for product hositng and download code generating",
  "main": "index.js",
  "repository": "https://github.com/TatsuyaYamamoto/dl-code.git",
  "author": "TatsuyaYamamoto <yamamoto.tatsuya@fujixerox.co.jp>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "8"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "start": "webpack-dev-server --config webpack.config.client.js",
    "serve": "firebase serve",
    "build-client": "   webpack --progress --config webpack.config.client.js",
    "build-functions": "webpack --progress --config webpack.config.functions.js",
    "build:dev": "npm-run-all clean --parallel build-client build-functions copy-deps",
    "copy-deps": "cpx '*{package.json,yarn.lock}' 'dist/functions' && yarn install --cwd dist/functions",
    "format": "prettier --write app/**/*.{ts,tsx,js,jsx,json,css}",
    "lint": "tslint --format stylish --project tsconfig.json --fix 'app/**/*.ts{,x}'",
    "deploy:dev": "firebase deploy --project dl-code-dev",
    "deploy:pro": "firebase deploy --project dl-code"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --format stylish --project tsconfig.json --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@date-io/date-fns": "^1.3.6",
    "@material-ui/core": "^4.1.1",
    "@material-ui/icons": "^4.0.0",
    "@material-ui/pickers": "^3.0.0",
    "dateformat": "^3.0.3",
    "dexie": "^2.0.4",
    "firebase": "^6.0.4",
    "firebase-admin": "^8.0.0",
    "firebase-functions": "^2.3.1",
    "hi-base32": "^0.5.0",
    "material-table": "^1.36.6",
    "rc-slider": "^8.6.13",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-dropzone": "^10.1.5",
    "react-router-dom": "^5.0.0",
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "@types/dateformat": "^3.0.0",
    "@types/rc-slider": "^8.6.4",
    "@types/react": "^16.8.18",
    "@types/react-dom": "^16.8.4",
    "@types/react-router-dom": "^4.3.3",
    "@types/styled-components": "^4.1.15",
    "cpx": "^1.5.0",
    "css-loader": "^3.0.0",
    "firebase-tools": "^6.10.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.1",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.0.1",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.5",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1",
    "webpack-node-externals": "^1.7.2"
  }
}
